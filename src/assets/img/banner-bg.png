<!--?xml version="1.0" encoding="UTF-8"?-->
<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1600 900" preserveAspectRatio="xMidYMid slice" width="1600" height="900" role="img" aria-label="Realistic galaxy background">

  <defs>
    <!-- main gradient background -->
    <linearGradient id="bgGradient" x1="0" x2="1" y1="0" y2="1">
      <stop offset="0%" stop-color="#02040a"></stop>
      <stop offset="25%" stop-color="#06071a"></stop>
      <stop offset="55%" stop-color="#0f123a"></stop>
      <stop offset="100%" stop-color="#140a26"></stop>
    </linearGradient>

    <!-- nebula gradients -->
    <radialGradient id="nebula1" cx="30%" cy="35%" r="50%">
      <stop offset="0%" stop-color="#6b39ff" stop-opacity="0.95"></stop>
      <stop offset="45%" stop-color="#7b5bff" stop-opacity="0.18"></stop>
      <stop offset="100%" stop-color="#0f123a" stop-opacity="0"></stop>
    </radialGradient>

    <radialGradient id="nebula2" cx="75%" cy="60%" r="60%">
      <stop offset="0%" stop-color="#ff7eb6" stop-opacity="0.85"></stop>
      <stop offset="40%" stop-color="#ffb86b" stop-opacity="0.14"></stop>
      <stop offset="100%" stop-color="#140a26" stop-opacity="0"></stop>
    </radialGradient>

    <!-- subtle noise-like texture via fractal-ish blur -->
    <filter id="softNoise">
      <feTurbulence type="fractalNoise" baseFrequency="0.9" numOctaves="2" stitchTiles="stitch"></feTurbulence>
      <feColorMatrix type="saturate" values="0"></feColorMatrix>
      <feComponentTransfer>
        <feFuncA type="table" tableValues="0 0.25"></feFuncA>
      </feComponentTransfer>
      <feGaussianBlur stdDeviation="20"></feGaussianBlur>
    </filter>

    <!-- star glow -->
    <radialGradient id="starGlow" cx="50%" cy="50%" r="50%">
      <stop offset="0%" stop-color="#ffffff" stop-opacity="1"></stop>
      <stop offset="30%" stop-color="#ffffff" stop-opacity="0.6"></stop>
      <stop offset="100%" stop-color="#ffffff" stop-opacity="0"></stop>
    </radialGradient>

    <!-- small star symbol -->
    <g id="star">
      <circle cx="0" cy="0" r="1" fill="#fff"></circle>
      <g opacity="0.25">
        <circle cx="0" cy="0" r="3" fill="url(#starGlow)"></circle>
      </g>
    </g>

    <!-- planet gradient -->
    <radialGradient id="planetGrad" cx="30%" cy="30%" r="80%">
      <stop offset="0%" stop-color="#ffd89b"></stop>
      <stop offset="35%" stop-color="#ff8a4c"></stop>
      <stop offset="100%" stop-color="#6b2b7f"></stop>
    </radialGradient>

    <!-- subtle vignette -->
    <radialGradient id="vignette" cx="50%" cy="50%" r="80%">
      <stop offset="0%" stop-color="#000000" stop-opacity="0"></stop>
      <stop offset="100%" stop-color="#000000" stop-opacity="0.35"></stop>
    </radialGradient>

    <!-- twinkle animation keyframes inside SVG style -->
    <style>
      /* twinkle variations */
      .twinkle { transform-origin: center; animation: twinkleAnim 2.8s infinite ease-in-out; }
      .tw1 { animation-duration: 2.4s; }
      .tw2 { animation-duration: 3.6s; animation-delay: 0.4s; }
      .tw3 { animation-duration: 1.8s; animation-delay: 0.1s; }

      @keyframes twinkleAnim {
        0% { opacity: 0.85; transform: scale(1); }
        50% { opacity: 0.25; transform: scale(0.9); }
        100% { opacity: 0.85; transform: scale(1); }
      }

      /* slow nebula drift */
      #nebula1, #nebula2 { animation: drift 60s linear infinite; }
      @keyframes drift {
        0% { transform: translate(0px,0px) scale(1); }
        50% { transform: translate(40px,-30px) scale(1.02); }
        100% { transform: translate(0px,0px) scale(1); }
      }

      /* planet subtle orbit shadow */
      #planetGroup { animation: planetFloat 18s ease-in-out infinite; }
      @keyframes planetFloat {
        0% { transform: translateY(0px); }
        50% { transform: translateY(-6px); }
        100% { transform: translateY(0px); }
      }
    </style>

  </defs>

  <!-- background -->
  <rect width="100%" height="100%" fill="url(#bgGradient)"></rect>

  <!-- nebula layers (soft colorful clouds) -->
  <g filter="url(#softNoise)" opacity="0.85">
    <ellipse id="nebula1" cx="480" cy="300" rx="520" ry="240" fill="url(#nebula1)"></ellipse>
    <ellipse id="nebula2" cx="1160" cy="520" rx="620" ry="320" fill="url(#nebula2)"></ellipse>
  </g>

  <!-- faint large cloud shapes (multiply blend via low opacity) -->
  <g opacity="0.35">
    <path d="M120 520 C 250 380, 420 320, 620 300 C 820 280, 900 420, 1040 440 C 1180 460, 1400 500, 1540 420 L1540 900 L0 900 Z" fill="#0b0b1c" opacity="0.08"></path>
    <path d="M60 140 C 200 40, 420 -10, 640 40 C 860 90, 1080 170, 1320 200 C 1460 220, 1540 260, 1600 240 L1600 0 L0 0 Z" fill="#210b2a" opacity="0.06"></path>
  </g>

  <!-- deep stars field: many tiny stars (generated as repeated small circles for crispness) -->
  <g id="stars" opacity="0.95">
    <!-- cluster 1 -->
    <g transform="translate(80,60) scale(0.9)">
      <!-- dense random stars block -->
      <!-- use repeated small stars with varying sizes and opacities -->
      <!-- row 1 -->
      <use href="#star" x="10" y="12" class="twinkle tw1"></use>
      <use href="#star" x="48" y="6" class="twinkle tw2"></use>
      <use href="#star" x="80" y="22" class="twinkle tw3"></use>
      <use href="#star" x="110" y="4"></use>
      <use href="#star" x="132" y="36" class="twinkle tw2"></use>
      <use href="#star" x="160" y="20"></use>
      <use href="#star" x="190" y="48" class="twinkle tw1"></use>
      <use href="#star" x="230" y="14"></use>
      <use href="#star" x="260" y="32" class="twinkle tw3"></use>
      <use href="#star" x="295" y="8"></use>
    </g>

    <!-- cluster 2 -->
    <g transform="translate(640,120) scale(1)">
      <use href="#star" x="10" y="10"></use>
      <use href="#star" x="44" y="30" class="twinkle tw3"></use>
      <use href="#star" x="86" y="4" class="twinkle tw1"></use>
      <use href="#star" x="120" y="18"></use>
      <use href="#star" x="156" y="36" class="twinkle tw2"></use>
      <use href="#star" x="190" y="6"></use>
      <use href="#star" x="224" y="44"></use>
      <use href="#star" x="260" y="12" class="twinkle tw1"></use>
    </g>

    <!-- center faint milky band stars (scattered) -->
    <g transform="translate(220,300) scale(1.6)" opacity="0.85">
      <use href="#star" x="10" y="8"></use>
      <use href="#star" x="34" y="20" class="twinkle tw2"></use>
      <use href="#star" x="64" y="6"></use>
      <use href="#star" x="94" y="28" class="twinkle tw1"></use>
      <use href="#star" x="128" y="4"></use>
      <use href="#star" x="160" y="20" class="twinkle tw3"></use>
      <use href="#star" x="198" y="10"></use>
      <use href="#star" x="240" y="34"></use>
    </g>

    <!-- extra sparse stars across entire canvas for depth; positions chosen to spread visually -->
    <use href="#star" x="80" y="820"></use>
    <use href="#star" x="140" y="700" class="twinkle tw2"></use>
    <use href="#star" x="220" y="120"></use>
    <use href="#star" x="300" y="640" class="twinkle tw1"></use>
    <use href="#star" x="420" y="540"></use>
    <use href="#star" x="520" y="80" class="twinkle tw3"></use>
    <use href="#star" x="680" y="760"></use>
    <use href="#star" x="740" y="420" class="twinkle tw2"></use>
    <use href="#star" x="980" y="140"></use>
    <use href="#star" x="1120" y="600" class="twinkle tw1"></use>
    <use href="#star" x="1280" y="260"></use>
    <use href="#star" x="1460" y="720" class="twinkle tw3"></use>
  </g>

  <!-- a brighter star / distant sun -->
  <g transform="translate(1240,120)">
    <circle r="28" fill="#fff" opacity="0.95"></circle>
    <circle r="60" fill="url(#starGlow)" opacity="0.6"></circle>
    <g opacity="0.12">
      <circle r="140" fill="#ffd9b8"></circle>
    </g>
  </g>

  <!-- small planet for composition interest -->
  <g id="planetGroup" transform="translate(320,620) scale(1)">
    <defs>
      </defs></g></svg>